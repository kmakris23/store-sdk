{
  "compilerOptions": {
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "baseUrl": ".",
    "paths": {
      "@store-sdk/core": ["packages/core/src/index.ts"],
      "@store-sdk/hippoo": ["packages/hippoo/src/index.ts"],
      "@store-sdk/jwt-authentication-for-wp-rest-api": [
        "packages/jwt-authentication-for-wp-rest-api/src/index.ts"
      ]
    }
  }
}
